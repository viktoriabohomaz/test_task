<p id="notice"><%= notice %></p>

<h1>Notifications</h1>
<% if @notifications.present? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @notifications.each do |notification| %>
        <% unless notification.sended? %>
          <tr>
            <td><%= notification.title %></td>
            <td><%= notification.description %></td>
            <td><%= notification.date %></td>
            <td><%= notification.time.strftime("%k:%M") %></td>
            <td><%= link_to 'Show', user_notification_url(@user.id, notification) %></td>
            <td><%= link_to 'Edit', edit_user_notification_path(@user.id, notification) %></td>
            <td><%= link_to 'Destroy', user_notification_path(@user.id, notification), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% else %>
            <tr>
            <td><%= notification.title %></td>
            <td><%= notification.description %></td>
            <td><%= notification.date %></td>
            <td><%= notification.time.strftime("%k:%M") %></td>
            <td><%= link_to 'Show', user_notification_url(@user.id, notification) %></td>
            <td><%= link_to 'Destroy', user_notification_path(@user.id, notification), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>        
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1> Empty </h1>
<% end %>
<br>

