<div class='container my-lg-4'>
  <div class='row'>
    <div class='col-sm-12 text-center'>
      <div class='col-sm-8 text-left'>
        <h1>Editing Notification</h1>
        <%= form_with(model: @notification, local: true,  url: user_notification_path(@user)) do |form| %>
          <% if @notification.errors.any? %>
            <div id="error_explanation">
              <ul>
              <% @notification.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control my-2' %>
          </div>

          <div class="field">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control my-2' %>
          </div>

          <div class="field">
            <%= form.label :date %>
            <%= form.date_select :date, class: 'form-control my-2' %>
          </div>

          <div class="field">
            <%= form.label :time %>
            <%= form.time_field :time %>
          </div>


          <div class="actions">
            <%= form.submit 'Edit Notification', class: 'btn btn-success my-2' %>
          </div>
        <% end %>


        <%= link_to 'Show', user_notification_path(@notification) %> |
        <%= link_to 'Back', user_notifications_path %>
      </div>
    </div>
  </div>
</div>
