<div class='container my-lg-4'>
  <div class='row'>
    <div class='col-sm-12 text-center'>
      <h1 class='text-dark'>Users List</h1>
      <% if @users.present? %>
        <table class='table'>
          <thead>
            <tr>
              <th>Last name</th>
              <th>First name</th>
              <th>Middle name</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
                <td><%= user.middle_name %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'Notification List', user_notifications_path(user.id), class: 'btn btn-outline-info' %></td>
                <td><%= link_to 'Destroy', user, class: 'btn btn-outline-dark', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p><em> Please, add first user </em></p>
        <% end %>
      <br>
      <%= link_to 'New User', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
</div>